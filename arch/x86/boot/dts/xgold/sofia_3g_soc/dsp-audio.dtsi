pcm_music:pcm_music {
	compatible = "intel,xgold-snd-pcm";
	intel,pcm,dma_en = < 0x1 >;
	intel,pcm,bt_init_en = < 0x1 >;
};

pcm_voice:pcm_voice {
	compatible = "intel,xgold-snd-voice";
};

speech_probe:speech_probe {
	compatible = "intel,xgold-snd-speech";
};

dsp_audio:dsp_audio {
	compatible = "intel,xgold-snd-dsp";

	intel,dsp,id = "XG642";
	reg = <0xE3600000 0x4000>, <0xE3604000 0x200000>;
	reg-names = "shm-regs", "shm-mem";
#ifndef CONFIG_X86_INTEL_SOFIA_ERRATA_002
	clocks = <&clk_dsp_aud>, <&int_dsp_aud_r>, <&ABB_MUX_MS>, <&clk_ahb_per3>, <&ABB_clk_chp>, <&clk_x2_aud>, <&clk_dsp_aud_26m>;
#else
	clocks = <&clk_dsp_aud>, <&int_dsp_aud_r>, <&clk_ahb_per3>, <&clk_x2_aud>, <&clk_dsp_aud_26m>;
#endif
	clock-names = "clk_dsp";

	pm,class-name = "dsp_audio_class";
	pm,user-name = "dsp_audio";
	pm,state-D0 = "enable";
	pm,state-D3 = "disable";
	pm,state-D0i3 = "suspend";

	dsp-supply = <&vdd_aud>;
	interrupts = < AUDIODSP_INT1 IRQ_TYPE_DEFAULT >, < AUDIODSP_INT2 IRQ_TYPE_DEFAULT >, < AUDIODSP_INT0 IRQ_TYPE_DEFAULT >;
	interrupt-names = "dsp_playback", "dsp_record", "dsp_tone";
	dmas = < &dma8ch 4
		 &dma8ch 5
		 &dma8ch 6 >;
	dma-names = "play1", "play2", "record";

	intel,uccf = <0x20C 0x210 0x214>;
	intel,mcu2dsp = <0x208>;
	intel,dsp-imsc = < 0xC 1 2 0 >;
	intel,dsp-icr = < 0x18 1 2 0 >;
	intel,dsp-mis = < 0x14 1 2 0 >;
	intel,dsp-cf = < 3 4 0x1F>; /* play1, record, tone */
	resets = <&dbb_rst2 13>;
	reset-names = "dsp";
	intel,dsp-pcm-offset = < 2051 3816 >;
	intel,dsp-clc = < 4 >;
